# Production Environment Variables for Railway
# Скопируйте эти переменные в Railway Dashboard -> Variables

# Основные настройки
NODE_ENV=production
PORT=3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Замените на ваш токен от @BotFather

# Frontend URL (обновите после развертывания на Vercel)
FRONTEND_URL=https://your-app.vercel.app
# Замените на ваш URL от Vercel

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security (опционально)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Database (если используется)
# DATABASE_URL=your_database_url_here

# Logging
LOG_LEVEL=info